<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- Ideogram -->
  <Operation Class="PatchOperationRemove">
    <xpath>*/ThingDef[defName = "Ideogram"]/costList</xpath>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>*/ThingDef[defName = "Ideogram"]</xpath>
    <value>
      <stuffCategories>
        <li>Metallic</li>
      </stuffCategories>
      <costStuffCount>50</costStuffCount>
    </value>
  </Operation>

<!-- SleepAccelerator -->
  <Operation Class="PatchOperationAdd">
    <xpath>*/ThingDef[defName = "SleepAccelerator"]/costList</xpath>
    <value>
      <ME_Copper>10</ME_Copper>
    </value>
  </Operation>

<!-- BiosculpterPod -->
  <Operation Class="PatchOperationAdd">
    <xpath>*/ThingDef[defName = "BiosculpterPod"]/costList</xpath>
    <value>
      <ME_Copper>15</ME_Copper>
    </value>
  </Operation>

<!-- NeuralSupercharger -->
  <Operation Class="PatchOperationAdd">
    <xpath>*/ThingDef[defName = "NeuralSupercharger"]/costList</xpath>
    <value>
      <ME_Copper>15</ME_Copper>
    </value>
  </Operation>

</Patch>
