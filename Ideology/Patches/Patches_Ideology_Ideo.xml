<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- LightBall -->
  <Operation Class="PatchOperationRemove">
    <xpath>*/ThingDef[defName = "Ideogram"]/costList</xpath>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>*/ThingDef[defName = "Ideogram"]</xpath>
    <value>
      <stuffCategories>
        <li>Metallic</li>
      </stuffCategories>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>*/ThingDef[defName = "Ideogram"]</xpath>
    <value>
      <costStuffCount>50</costStuffCount>
    </value>
  </Operation>

</Patch>
