<Defs>

  <RecipeDef>
    <defName>Make_ChemfuelFromCoal</defName>
    <label>make chemfuel from coal</label>
    <description>Make a batch of chemfuel by extracting and condensing carbon from coal.</description>
    <jobString>Refining chemfuel from coal.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>2500</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ME_Coal</li>
          </thingDefs>
        </filter>
        <count>60</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ME_Coal</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Chemfuel>40</Chemfuel>
    </products>
  </RecipeDef>

