<Defs>

  <!-- Mega Lead Battery -->
  <ThingDef ParentName="BE_BatteryMega">
    <defName>BE_Mega_Lead_Battery</defName>
    <label>giant lead battery</label>
    <description>A giant version of the lead battery. Stores very large amounts of electricity for later.</description>
    <graphicData>
      <texPath>Things/Building/Power/Mega_Batteries/BE_Mega_Lead_Battery</texPath>
    </graphicData>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
      <Mass>180</Mass>
      <Flammability>0.25</Flammability>
      <Beauty>-15</Beauty>
    </statBases>
    <descriptionHyperlinks>
      <ThingDef>BE_Mega_Copper_Battery</ThingDef>
      <ThingDef>BE_Mega_Steel_Battery</ThingDef>
      <ThingDef>BE_Mega_Waterproof_Battery</ThingDef>
      <ThingDef>BE_Mega_Nickel_Battery</ThingDef>
      <ThingDef>BE_Mega_Uranium_Battery</ThingDef>
      <ThingDef>BE_Mega_Lithium_Battery</ThingDef>
      <ThingDef>BE_Mega_Plasteel_Battery</ThingDef>
    </descriptionHyperlinks>
    <costList>
      <ME_Lead>195</ME_Lead>
      <Steel>60</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <comps>
      <li Class="CompProperties_Battery">
        <storedEnergyMax>2500</storedEnergyMax>
        <efficiency>0.5</efficiency>
        <shortCircuitInRain>true</shortCircuitInRain>
        <transmitsPower>true</transmitsPower>
      </li>
    </comps>
    <researchPrerequisites>
      <li>BE_Lead_Batteries</li>
    </researchPrerequisites>
  </ThingDef>

