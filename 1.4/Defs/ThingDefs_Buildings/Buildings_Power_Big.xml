<Defs>

  <!-- Big Lead Battery -->
  <ThingDef ParentName="BE_BatteryBig">
    <defName>BE_Big_Lead_Battery</defName>
    <label>big lead battery</label>
    <description>A bigger version of the lead battery. Stores large amounts of electricity for later.</description>
    <graphicData>
      <texPath>Things/Building/Power/Big_Batteries/BE_Big_Lead_Battery</texPath>
    </graphicData>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>3000</WorkToBuild>
      <Mass>120</Mass>
      <Flammability>0.25</Flammability>
      <Beauty>-15</Beauty>
    </statBases>
    <descriptionHyperlinks>
      <ThingDef>BE_Big_Copper_Battery</ThingDef>
      <ThingDef>BE_Big_Steel_Battery</ThingDef>
      <ThingDef>BE_Big_Waterproof_Battery</ThingDef>
      <ThingDef>BE_Big_Nickel_Battery</ThingDef>
      <ThingDef>BE_Big_Uranium_Battery</ThingDef>
      <ThingDef>BE_Big_Lithium_Battery</ThingDef>
      <ThingDef>BE_Big_Plasteel_Battery</ThingDef>
    </descriptionHyperlinks>
    <costList>
      <ME_Lead>130</ME_Lead>
      <Steel>40</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Battery">
        <storedEnergyMax>1500</storedEnergyMax>
        <efficiency>0.5</efficiency>
        <shortCircuitInRain>true</shortCircuitInRain>
        <transmitsPower>true</transmitsPower>
      </li>
    </comps>
    <researchPrerequisites>
      <li>BE_Lead_Batteries</li>
    </researchPrerequisites>
  </ThingDef>

