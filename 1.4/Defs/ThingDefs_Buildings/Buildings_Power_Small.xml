<Defs>

  <!-- Small Lead Battery -->
  <ThingDef ParentName="BE_BatterySmall">
    <defName>BE_Small_Lead_Battery</defName>
    <label>small lead battery</label>
    <description>A smaller version of the lead battery, useful if you don't have much space.</description>
    <graphicData>
      <texPath>Things/Building/Power/Small_Batteries/BE_Small_Lead_Battery</texPath>
    </graphicData>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>500</WorkToBuild>
      <Mass>30</Mass>
      <Flammability>0.25</Flammability>
      <Beauty>-15</Beauty>
    </statBases>
    <descriptionHyperlinks>
      <ThingDef>BE_Small_Copper_Battery</ThingDef>
      <ThingDef>BE_Small_Steel_Battery</ThingDef>
      <ThingDef>BE_Small_Waterproof_Battery</ThingDef>
      <ThingDef>BE_Small_Nickel_Battery</ThingDef>
      <ThingDef>BE_Small_Uranium_Battery</ThingDef>
      <ThingDef>BE_Small_Lithium_Battery</ThingDef>
      <ThingDef>BE_Small_Plasteel_Battery</ThingDef>
    </descriptionHyperlinks>
    <costList>
      <ME_Lead>30</ME_Lead>
      <Steel>10</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Battery">
        <storedEnergyMax>340</storedEnergyMax>
        <efficiency>0.5</efficiency>
        <shortCircuitInRain>true</shortCircuitInRain>
        <transmitsPower>true</transmitsPower>
      </li>
    </comps>
    <researchPrerequisites>
      <li>BE_Lead_Batteries</li>
    </researchPrerequisites>
  </ThingDef>

