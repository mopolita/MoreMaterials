<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- Turret_FoamTurret -->
  <Operation Class="PatchOperationReplace">
    <xpath>*/ThingDef[defName = "Turret_FoamTurret"]/costList/Steel</xpath>
    <value>
      <Steel>25</Steel>
    </value>
  </Operation>

